<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="\r\n\r\nPress the 'Install' button to install this plugin to AndroidScript.\r\n\r\n
You can remove this app once installation is complete.\r\n \r\n"
    android:paddingTop="5dp"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:gravity="center"
    android:textColor="#FFFFFF"
		android:textSize="20dp"
    />
<Button
	 android:id="@+id/buttonInstall"
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:layout_marginLeft="30dip" 
	 android:layout_marginRight="30dip" 
	 android:text="Install"/>
<Button
	 android:id="@+id/buttonUninstall"
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content"
	 android:layout_marginTop="10dip"
	 android:layout_marginLeft="30dip" 
	 android:layout_marginRight="30dip" 
	 android:text="Uninstall"/>
</LinearLayout>